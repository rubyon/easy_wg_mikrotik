<!-- 대시보드 헤더 -->
<div class="wg-dashboard-header">
  <h1 class="wg-dashboard-title"><%= t('dashboard.title') %></h1>
  <p class="wg-dashboard-subtitle"><%= t('dashboard.subtitle') %></p>
</div>

<!-- 주요 액션 카드들 -->
<div class="wg-dashboard-grid">
  <!-- 새 클라이언트 생성 카드 -->
  <div class="group">
    <%= link_to new_client_path, class: "wg-dashboard-card-primary p-8" do %>
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-white/20 rounded-md flex items-center justify-center">
          <i class="bi bi-plus-lg" style="font-size: 1.5rem;"></i>
        </div>
        <div class="text-right opacity-80">
          <div class="text-2xl font-bold"><%= t('dashboard.new_client_card.badge') %></div>
        </div>
      </div>
      <h3 class="text-xl font-bold mb-2"><%= t('dashboard.new_client_card.title') %></h3>
      <p class="text-blue-100 text-sm"><%= t('dashboard.new_client_card.description') %></p>
      <div class="mt-4 flex items-center text-sm opacity-80">
        <span><%= t('dashboard.new_client_card.action') %></span>
        <i class="bi bi-chevron-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
      </div>
    <% end %>
  </div>

  <!-- 클라이언트 목록 카드 -->
  <div class="group">
    <%= link_to clients_path, class: "wg-dashboard-card-secondary p-8" do %>
      <div class="flex items-center justify-between mb-4">
        <div class="w-12 h-12 bg-white/20 rounded-md flex items-center justify-center">
          <i class="bi bi-router" style="font-size: 1.5rem;"></i>
        </div>
        <div class="text-right opacity-80">
          <div class="text-2xl font-bold"><%= t('dashboard.clients_card.badge') %></div>
        </div>
      </div>
      <h3 class="text-xl font-bold mb-2"><%= t('dashboard.clients_card.title') %></h3>
      <p class="text-purple-100 text-sm"><%= t('dashboard.clients_card.description') %></p>
      <div class="mt-4 flex items-center text-sm opacity-80">
        <span><%= t('dashboard.clients_card.action') %></span>
        <i class="bi bi-chevron-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
      </div>
    <% end %>
  </div>
</div>

<!-- 연결 정보 섹션 -->
<div class="wg-connection-info">
  <div class="wg-connection-header">
    <h3 class="wg-connection-title">
      <div class="w-8 h-8 bg-wg-success rounded-lg flex items-center justify-center">
        <i class="bi bi-wifi text-white"></i>
      </div>
      <span><%= t('dashboard.connection.title') %></span>
    </h3>
    <div class="wg-connection-status">
      <div class="w-3 h-3 bg-wg-success rounded-full animate-pulse"></div>
      <span class="text-sm font-medium text-wg-success"><%= t('dashboard.connection.status') %></span>
    </div>
  </div>

  <div class="wg-connection-grid">
    <div class="wg-connection-item">
      <div class="wg-connection-item-header">
        <i class="bi bi-hdd-network text-wg-gray" style="font-size: 1.25rem;"></i>
        <span class="text-sm font-medium text-wg-gray"><%= t('dashboard.connection.host') %></span>
      </div>
      <div class="wg-connection-item-value"><%= @mikrotik_host %></div>
    </div>

    <div class="wg-connection-item">
      <div class="wg-connection-item-header">
        <i class="bi bi-person text-wg-gray" style="font-size: 1.25rem;"></i>
        <span class="text-sm font-medium text-wg-gray"><%= t('dashboard.connection.user') %></span>
      </div>
      <div class="wg-connection-item-value"><%= @mikrotik_user %></div>
    </div>

    <div class="wg-connection-item">
      <div class="wg-connection-item-header">
        <i class="bi bi-ethernet text-wg-gray" style="font-size: 1.25rem;"></i>
        <span class="text-sm font-medium text-wg-gray"><%= t('dashboard.connection.port') %></span>
      </div>
      <div class="wg-connection-item-value"><%= session[:mikrotik_port] %></div>
    </div>
  </div>
</div>

<!-- 사용법 안내 -->
<div class="bg-gradient-to-r from-indigo-50 to-blue-50 rounded-lg border border-gray-300 p-8">
  <div class="flex items-center space-x-3 mb-6">
    <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-blue-500 rounded-md flex items-center justify-center">
      <i class="bi bi-lightbulb text-white" style="font-size: 1.25rem;"></i>
    </div>
    <h3 class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent"><%= t('dashboard.guide.title') %></h3>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white/50 backdrop-blur-sm rounded-md p-6 border border-white/30">
      <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center text-white font-bold text-sm mb-4">1</div>
      <h4 class="font-bold text-gray-900 mb-2"><%= t('dashboard.guide.step1.title') %></h4>
      <p class="text-sm text-gray-600"><%= t('dashboard.guide.step1.description') %></p>
    </div>

    <div class="bg-white/50 backdrop-blur-sm rounded-md p-6 border border-white/30">
      <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center text-white font-bold text-sm mb-4">2</div>
      <h4 class="font-bold text-gray-900 mb-2"><%= t('dashboard.guide.step2.title') %></h4>
      <p class="text-sm text-gray-600"><%= t('dashboard.guide.step2.description') %></p>
    </div>

    <div class="bg-white/50 backdrop-blur-sm rounded-md p-6 border border-white/30">
      <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-lg flex items-center justify-center text-white font-bold text-sm mb-4">3</div>
      <h4 class="font-bold text-gray-900 mb-2"><%= t('dashboard.guide.step3.title') %></h4>
      <p class="text-sm text-gray-600"><%= t('dashboard.guide.step3.description') %></p>
    </div>
  </div>
</div>
