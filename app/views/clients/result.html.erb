<div class="max-w-7xl mx-auto" data-controller="client-result">
  <!-- 페이지 헤더 -->
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-r from-green-500 to-emerald-500 rounded mb-6  animate-bounce">
      <i class="bi bi-check-lg text-white" style="font-size: 2.5rem;"></i>
    </div>
    <h1 class="text-4xl font-bold bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent mb-3">
      <%= t('client_result.title') %>
    </h1>
    <p class="text-gray-600 text-lg"><%= t('client_result.subtitle') %></p>
  </div>

  <!-- 메인 결과 컨테이너 -->
  <div class="bg-white/80 backdrop-blur-lg rounded  border border-gray-300 overflow-hidden mb-8">

    <!-- 진행 단계 표시 (완료됨) -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-8 py-6 border-b border-gray-300">
      <div class="flex items-center justify-between max-w-md mx-auto">
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
            <i class="bi bi-check-lg text-white"></i>
          </div>
          <span class="text-sm font-medium text-green-600"><%= t('new_client.steps.interface') %></span>
        </div>
        <div class="w-12 h-0.5 bg-green-400"></div>
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
            <i class="bi bi-check-lg text-white"></i>
          </div>
          <span class="text-sm font-medium text-green-600"><%= t('new_client.steps.config') %></span>
        </div>
        <div class="w-12 h-0.5 bg-green-400"></div>
        <div class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
            <i class="bi bi-check-lg text-white"></i>
          </div>
          <span class="text-sm font-medium text-green-600"><%= t('new_client.steps.qr') %></span>
        </div>
      </div>
    </div>

    <!-- 상단 요약 카드 -->
    <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-8 py-6 border-b border-gray-300">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-green-600 rounded-md flex items-center justify-center">
            <i class="bi bi-person text-white" style="font-size: 1.5rem;"></i>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-green-900"><%= @client_name %></h2>
            <p class="text-green-700 text-sm"><%= t('client_result.subtitle') %></p>
          </div>
        </div>
        <div class="text-right">
          <div class="text-sm text-green-600 font-medium"><%= t('client_result.assigned_ip') %></div>
          <div class="text-lg font-bold text-green-800 font-mono"><%= @client_address %></div>
        </div>
      </div>
    </div>

    <!-- 메인 콘텐츠 그리드 -->
    <div class="p-8 space-y-8">

      <!-- 첫 번째 줄: 클라이언트 정보 -->
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded p-6 border border-gray-300">
        <div class="flex items-center space-x-3 mb-6">
          <div class="w-10 h-10 bg-blue-600 rounded-md flex items-center justify-center">
            <i class="bi bi-info-circle text-white" style="font-size: 1.25rem;"></i>
          </div>
          <h3 class="text-xl font-bold text-blue-900"><%= t('client_result.client_info') %></h3>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
          <div class="bg-white/60 backdrop-blur-sm rounded-md p-4 border border-gray-300">
            <div class="flex flex-col space-y-2">
              <div class="flex items-center space-x-2">
                <i class="bi bi-tag text-blue-600"></i>
                <span class="text-sm font-semibold text-blue-800"><%= t('client_result.client_name') %></span>
              </div>
              <span class="font-bold text-blue-900 truncate"><%= @client_name %></span>
            </div>
          </div>

          <div class="bg-white/60 backdrop-blur-sm rounded-md p-4 border border-gray-300">
            <div class="flex flex-col space-y-2">
              <div class="flex items-center space-x-2">
                <i class="bi bi-globe text-blue-600"></i>
                <span class="text-sm font-semibold text-blue-800"><%= t('client_result.assigned_ip') %></span>
              </div>
              <span class="font-mono font-bold text-blue-900"><%= @client_address %></span>
            </div>
          </div>

          <div class="bg-white/60 backdrop-blur-sm rounded-md p-4 border border-gray-300">
            <div class="flex flex-col space-y-2">
              <div class="flex items-center space-x-2">
                <i class="bi bi-router text-blue-600"></i>
                <span class="text-sm font-semibold text-blue-800"><%= t('client_result.interface') %></span>
              </div>
              <span class="font-bold text-blue-900"><%= @interface_name %></span>
            </div>
          </div>

          <div class="bg-white/60 backdrop-blur-sm rounded-md p-4 border border-gray-300">
            <div class="flex flex-col space-y-2">
              <div class="flex items-center space-x-2">
                <i class="bi bi-hdd-network text-blue-600"></i>
                <span class="text-sm font-semibold text-blue-800"><%= t('client_result.server') %></span>
              </div>
              <span class="font-mono text-sm font-bold text-blue-900 truncate"><%= @endpoint %></span>
            </div>
          </div>

          <div class="bg-white/60 backdrop-blur-sm rounded-md p-4 border border-gray-300">
            <div class="flex flex-col space-y-2">
              <div class="flex items-center space-x-2">
                <i class="bi bi-clock text-blue-600"></i>
                <span class="text-sm font-semibold text-blue-800"><%= t('client_result.created_time') %></span>
              </div>
              <span class="font-mono text-sm font-bold text-blue-900"><%= Time.current.strftime('%m/%d %H:%M') %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- 두 번째 줄: 설정 파일과 QR 코드 -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">

        <!-- 설정 파일 카드 (왼쪽) -->
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded p-6 border border-gray-300">
          <div class="flex items-center space-x-3 mb-6">
            <div class="w-10 h-10 bg-gray-700 rounded-md flex items-center justify-center">
              <i class="bi bi-file-text text-white" style="font-size: 1.25rem;"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-900"><%= t('client_result.config_file') %></h3>
          </div>

          <div class="bg-gray-900 rounded-md p-4 text-green-400 font-mono text-xs overflow-x-auto border border-gray-700  mb-4">
            <pre class="whitespace-pre-wrap break-all"><%= @client_config %></pre>
          </div>

        </div>

        <!-- QR 코드 카드 (오른쪽) -->
        <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded p-6 border border-gray-300">
          <div class="flex items-center space-x-3 mb-6">
            <div class="w-10 h-10 bg-purple-600 rounded-md flex items-center justify-center">
              <i class="bi bi-qr-code text-white" style="font-size: 1.25rem;"></i>
            </div>
            <h3 class="text-xl font-bold text-purple-900"><%= t('client_result.qr_code') %></h3>
          </div>

          <div class="flex justify-center">
            <div class="inline-block bg-white p-4 rounded-lg " id="qr-code-container">
              <%= @qr_code %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white/70 backdrop-blur-sm rounded border border-gray-300 p-8 mb-8">
    <div class="flex items-center space-x-3 mb-6">
      <div class="w-12 h-12 bg-blue-500 rounded-md flex items-center justify-center">
        <i class="bi bi-download text-white" style="font-size: 1.5rem;"></i>
      </div>
      <h3 class="text-2xl font-bold text-blue-900"><%= t('client_result.download_section') %></h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- 설정 파일 다운로드 -->
      <%= link_to "#",
            data: {
              action: "click->client-result#downloadConfig",
              client_result_client_name_param: @client_name,
              client_result_config_param: @client_config
            },
            class: "group flex items-center justify-center px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold rounded-md transition-all duration-200  hover:" do %>
        <i class="bi bi-file-text mr-3" style="font-size: 1.25rem;"></i>
        <span><%= t('client_result.download_config') %></span>
      <% end %>

      <!-- QR 코드 이미지 다운로드 -->
      <%= link_to "#",
            data: {
              action: "click->client-result#downloadQR",
              client_result_client_name_param: @client_name
            },
            class: "group flex items-center justify-center px-8 py-4 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-bold rounded-md transition-all duration-200  hover:" do %>
        <i class="bi bi-qr-code mr-3" style="font-size: 1.25rem;"></i>
        <span><%= t('client_result.download_qr') %></span>
      <% end %>
    </div>
  </div>

  <!-- 사용 안내 및 다음 단계 -->
  <div class="bg-gradient-to-r from-amber-50 to-yellow-50 rounded border border-gray-300 p-8 mb-8">
    <div class="flex items-center space-x-3 mb-6">
      <div class="w-12 h-12 bg-amber-500 rounded-md flex items-center justify-center">
        <i class="bi bi-lightbulb text-white" style="font-size: 1.5rem;"></i>
      </div>
      <h3 class="text-2xl font-bold text-amber-900"><%= t('client_result.next_steps.title') %></h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
      <div class="bg-white/60 backdrop-blur-sm rounded-md p-6 border border-gray-300">
        <div class="flex items-center space-x-3 mb-4">
          <h4 class="font-bold text-amber-800"><%= t('client_result.next_steps.mobile.title') %></h4>
        </div>
        <p class="text-sm text-amber-700"><%= t('client_result.next_steps.mobile.description') %></p>
      </div>

      <div class="bg-white/60 backdrop-blur-sm rounded-md p-6 border border-gray-300">
        <div class="flex items-center space-x-3 mb-4">
          <h4 class="font-bold text-amber-800"><%= t('client_result.next_steps.pc.title') %></h4>
        </div>
        <p class="text-sm text-amber-700"><%= t('client_result.next_steps.pc.description') %></p>
      </div>

      <div class="bg-white/60 backdrop-blur-sm rounded-md p-6 border border-gray-300">
        <div class="flex items-center space-x-3 mb-4">
          <h4 class="font-bold text-amber-800"><%= t('client_result.next_steps.test.title') %></h4>
        </div>
        <p class="text-sm text-amber-700"><%= t('client_result.next_steps.test.description') %></p>
      </div>

      <div class="bg-white/60 backdrop-blur-sm rounded-md p-6 border border-gray-300">
        <div class="flex items-center space-x-3 mb-4">
          <h4 class="font-bold text-amber-800"><%= t('client_result.next_steps.manage.title') %></h4>
        </div>
        <p class="text-sm text-amber-700"><%= t('client_result.next_steps.manage.description') %></p>
      </div>
    </div>
  </div>

  <!-- 액션 버튼들 -->
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <%= link_to new_client_path,
          class: "group px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold rounded-md text-center transition-all duration-200  hover:" do %>
      <span class="flex items-center justify-center space-x-2">
        <i class="bi bi-plus-lg" style="font-size: 1.25rem;"></i>
        <span><%= t('client_result.actions.create_another') %></span>
      </span>
    <% end %>

    <%= link_to clients_path,
          class: "group px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold rounded-md text-center transition-all duration-200  hover:" do %>
      <span class="flex items-center justify-center space-x-2">
        <i class="bi bi-list" style="font-size: 1.25rem;"></i>
        <span><%= t('client_result.actions.view_clients') %></span>
      </span>
    <% end %>

    <%= link_to root_path,
          class: "group px-8 py-4 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-bold rounded-md text-center transition-all duration-200  hover:" do %>
      <span class="flex items-center justify-center space-x-2">
        <i class="bi bi-house" style="font-size: 1.25rem;"></i>
        <span><%= t('client_result.actions.back_dashboard') %></span>
      </span>
    <% end %>
  </div>
</div>
