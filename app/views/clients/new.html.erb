            </div>
            <h3 class="text-lg font-bold text-green-900"><%= t('new_client.name_section.title') %></h3>
          </div>

          <div>
            <label class="block text-sm font-semibold text-green-800 mb-3"><%= t('new_client.name_section.label') %></label>
            <%= f.text_field :client_name,
