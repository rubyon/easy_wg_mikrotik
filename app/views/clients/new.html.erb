    <!-- í¼ ë³¸ë¬¸ -->
    <div class="p-8">

      <%= form_with url: clients_path, method: :post, local: true, class: "space-y-8", data: { turbo: false } do |f| %>
        <!-- ì„¹ì…˜ 1: ì¸í„°í˜ì´ìŠ¤ ì„ íƒ -->
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-md p-6 border border-gray-300">
